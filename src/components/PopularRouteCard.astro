---
import { Image } from "astro:assets";

interface Props {
  imagePath: string;
  destination: string;
}

const { destination, imagePath } = Astro.props;
---

<div class="relative">
  <Image
    width={400}
    height={480}
    class="w-[300px] h-[380px] brightness-90 xl:w-[400px] xl:h-[480px]"
    src={imagePath}
    alt={destination}
  />
  <h3 class="absolute bottom-3 left-6 text-white font-bold text-2xl">
    {destination}
  </h3>
</div>
